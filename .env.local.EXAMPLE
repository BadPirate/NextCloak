# Database Connections
# Choose one of the following database connection options

# Option 1: SQLite (for development)
DATABASE_URL=file:./dev.db

# Option 2: PostgreSQL (for production)
# DATABASE_URL=postgres://user:password@localhost:5432/drunkcircle
# AUTH_TYPEORM_CONNECTION=postgres://user:password@localhost:5432/drunkcircle

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key_at_least_32_chars_long

# OAuth Providers
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Email Provider
EMAIL_SERVER=smtp://username:password@smtp.example.com:587
EMAIL_FROM=noreply@example.com

# RSA Keys for JWT Signing (base64 encoded)
# You can generate these with:
# 1. openssl genrsa -out private.pem 2048
# 2. openssl rsa -in private.pem -pubout -out public.pem
# 3. cat private.pem | base64 | tr -d '\n' > for RSA_PRIVATE_KEY value
# 4. cat public.pem | base64 | tr -d '\n' > for RSA_PUBLIC_KEY value
RSA_PRIVATE_KEY=base64_encoded_private_key
RSA_PUBLIC_KEY=base64_encoded_public_key

# OAuth Redirect URI Validation (optional)
# Regex to validate redirect_uri in OAuth requests
# REDIRECT_REGEX=^https://your-domain\.com.*

# Application Version
NEXT_PUBLIC_APP_VERSION=0.0.2
